# Production Environment for APK Build
# VPS Backend Configuration - Set via environment variable or .env file
# Use PRODUCTION_API_URL for production deployments
# Examples:
#   http://139.59.82.105:8000
#   http://your-vps-ip:8000
#   https://api.yourdomain.com
# Default to current VPS backend; change if you move servers
PRODUCTION_API_URL=http://139.59.82.105:8000

# Fallback to API_BASE_URL if PRODUCTION_API_URL not set
# For local testing keep this as localhost
API_BASE_URL=http://139.59.82.105:8000

# Performance Optimization
DEBUG=False

# Connection Settings (optimized for mobile networks)
CONNECT_TIMEOUT=15
READ_TIMEOUT=45
WRITE_TIMEOUT=30
