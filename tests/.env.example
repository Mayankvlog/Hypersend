# ============================================================
# HYPERSEND DEPLOYMENT CONFIGURATION
# ============================================================
# 
# SETUP INSTRUCTIONS FOR VPS:
# 1. SSH into your VPS: ssh root@your-vps-ip
# 2. Navigate to repo: cd /hypersend/Hypersend
# 3. Copy this file: cp .env.example .env
# 4. Edit .env and replace placeholders with actual values
# 5. Deploy: docker compose up -d --build
#
# IMPORTANT: MongoDB credentials are case-sensitive and must match
# the values created during initial MongoDB setup.
# ============================================================

# ===== MONGODB DATABASE CREDENTIALS =====
# These MUST match your actual MongoDB user credentials
# Get MONGO_PASSWORD from: GitHub Settings > Secrets and variables > Actions
#
# CRITICAL: Use RAW passwords (NOT URL-encoded)
# - Raw password: "Pass@#$123"
# - NOT URL-encoded: "Pass%40%23%24123"
# 
# The backend automatically handles URL encoding via quote_plus()
# so you only need to provide the raw password here.
MONGO_USER=hypersend
MONGO_PASSWORD=REPLACE_WITH_SECURE_MONGODB_PASSWORD
MONGO_HOST=mongodb
MONGO_PORT=27017
MONGO_INITDB_DATABASE=hypersend

# ===== SECURITY =====
SECRET_KEY=REPLACE_WITH_SECURE_32_CHARACTER_SECRET_KEY
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=30

# ===== API CONFIGURATION =====
API_HOST=0.0.0.0
API_PORT=8000
API_BASE_URL=http://localhost:8000/api/v1
DEBUG=False

# ===== FILE STORAGE =====
STORAGE_MODE=local
DATA_ROOT=/data
CHUNK_SIZE=4194304
MAX_FILE_SIZE_BYTES=42949672960
MAX_PARALLEL_CHUNKS=4
FILE_RETENTION_HOURS=0
UPLOAD_EXPIRE_HOURS=24

# ===== RATE LIMITING =====
RATE_LIMIT_PER_USER=100
RATE_LIMIT_WINDOW_SECONDS=60

# ===== EMAIL / SMTP (Optional) =====
SMTP_HOST=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_USE_TLS=True
EMAIL_FROM=
