ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=30

# ===== API CONFIGURATION =====
API_HOST=0.0.0.0
API_PORT=8000
API_BASE_URL=https://zaply.in.net/api/v1
DEBUG=False

