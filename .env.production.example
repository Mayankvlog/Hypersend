# ============================================================
# ðŸš€ PRODUCTION ENVIRONMENT CONFIGURATION
# ============================================================
# 
# Instructions:
# 1. Copy this file: cp .env.production.example .env.production
# 2. Update all values (especially SECRET_KEY, API_BASE_URL, MONGO_PASSWORD)
# 3. Load environment variables: source .env.production
# 4. Start Docker: docker-compose up -d
#
# ============================================================

# MongoDB Authentication
# CHANGE THIS to your secure password!
MONGO_USER=admin
MONGO_PASSWORD=YourSecurePasswordHere123!@

# VPS IP or Domain (for CORS and API_BASE_URL)
VPS_IP=139.59.82.105

# ============================================================
# SECURITY - CRITICAL! GENERATE NEW KEY FOR PRODUCTION
# ============================================================
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
# Example: o7-xK8pL9m0n1Q2r3S4t5U6v7W8x9Y0z1A2b3C4d
# CHANGE THIS VALUE BEFORE DEPLOYING!
SECRET_KEY=YOUR_GENERATED_SECRET_KEY_HERE

# ============================================================
# Debug Mode
# ============================================================
# Set to False for production (strict validation)
# Set to True for development/testing
DEBUG=False

# ============================================================
# API Configuration
# ============================================================
# Update to your actual domain/IP
API_BASE_URL=http://139.59.82.105:8000

# For HTTPS (recommended for production):
# API_BASE_URL=https://api.yourdomain.com

# ============================================================
# Optional: SMTP Configuration (for email notifications)
# ============================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_USE_TLS=True
EMAIL_FROM=noreply@your-domain.com

# ============================================================
# Database URI (alternative to MONGO_USER/MONGO_PASSWORD)
# ============================================================
# If using managed MongoDB Atlas:
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/hypersend?retryWrites=true&w=majority

# If using local MongoDB with auth:
# MONGODB_URI=mongodb://admin:password@mongodb:27017/hypersend?authSource=admin

# For Docker Compose (uses MONGO_USER and MONGO_PASSWORD above):
# MONGODB_URI=mongodb://${MONGO_USER}:${MONGO_PASSWORD}@mongodb:27017/hypersend?authSource=admin

# ============================================================
# Rate Limiting
# ============================================================
RATE_LIMIT_PER_USER=100
RATE_LIMIT_WINDOW_SECONDS=60

# ============================================================
# File Storage (40GB max)
# ============================================================
MAX_FILE_SIZE_BYTES=42949672960
CHUNK_SIZE=4194304
MAX_PARALLEL_CHUNKS=4
UPLOAD_EXPIRE_HOURS=24
FILE_RETENTION_HOURS=0

# ============================================================
# IMPORTANT NOTES
# ============================================================
# 1. This file should NOT be committed to Git
# 2. Keep SECRET_KEY private and unique per deployment
# 3. Use strong passwords for MongoDB
# 4. For HTTPS, update API_BASE_URL to use https://
# 5. For production, use managed services (MongoDB Atlas, etc.)
# 6. Regularly rotate SECRET_KEY and credentials
# 7. Use nginx/reverse proxy for additional security
