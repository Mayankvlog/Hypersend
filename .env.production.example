
# MongoDB Authentication
# CHANGE THIS to your secure password!
# Use: python3 -c "import secrets; print(secrets.token_urlsafe(16))"
MONGO_USER=admin
MONGO_PASSWORD=YourSecurePasswordHere123!@

# VPS IP or Domain
# Replace with your actual VPS IP
VPS_IP=139.59.82.105

# ============================================================
# SECURITY - SECRET_KEY (MUST SET PER VPS)
# ============================================================
# IMPORTANT: Do NOT use a shared or hardcoded SECRET_KEY.
# Generate a new key on each VPS:
#   python3 -c "import secrets; print(secrets.token_urlsafe(32))"
# Then paste it here before deployment.
SECRET_KEY=CHANGE-THIS-SECRET-KEY-IN-PRODUCTION

# ============================================================
# Debug Mode
# ============================================================
# Set to False for production (strict validation)
# Set to True for development/testing
DEBUG=False

# ============================================================
# CORS_ORIGINS
# ============================================================
CORS_ORIGINS=https://zaply.in.net,https://www.zaply.in.net

# ============================================================
# API Configuration
# ============================================================
# Default VPS backend URL (can be changed if you move servers)
API_BASE_URL=https://zaply.in.net/api/v1

# For HTTPS (recommended for production):
# Example: API_BASE_URL=https://api.yourdomain.com
# API_BASE_URL=https://api.yourdomain.com

# ============================================================
# Optional: SMTP Configuration (for email notifications)
# ============================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_USE_TLS=True
EMAIL_FROM=noreply@zaply.in.net

# ============================================================
# Database URI (alternative to MONGO_USER/MONGO_PASSWORD)
# ============================================================
# If using managed MongoDB Atlas:
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/zaply?retryWrites=true&w=majority

# If using local MongoDB with auth:
# MONGODB_URI=mongodb://admin:password@mongodb:27017/zaply?authSource=admin

# For Docker Compose (uses MONGO_USER and MONGO_PASSWORD above):
# MONGODB_URI=mongodb://${MONGO_USER}:${MONGO_PASSWORD}@mongodb:27017/zaply?authSource=admin

# ============================================================
# Rate Limiting
# ============================================================
RATE_LIMIT_PER_USER=100
RATE_LIMIT_WINDOW_SECONDS=60

# ============================================================
# File Storage (40GB max)
# ============================================================
MAX_FILE_SIZE_BYTES=42949672960
CHUNK_SIZE=4194304
MAX_PARALLEL_CHUNKS=4
UPLOAD_EXPIRE_HOURS=24
FILE_RETENTION_HOURS=0

