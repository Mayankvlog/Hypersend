# Zaply Production Environment Configuration Template
# Copy this to .env and fill in actual values for your VPS

# ============================================================================
# MONGODB DATABASE CONFIGURATION
# ============================================================================
# Username for MongoDB root user
MONGO_USER=hypersend

# Password for MongoDB root user (CHANGE THIS - use strong random password)
# Generate with: openssl rand -base64 32
MONGO_PASSWORD=your-strong-mongodb-password-here-change-me

# ============================================================================
# FASTAPI SECURITY CONFIGURATION
# ============================================================================
# Secret key for JWT token signing and encryption
# Generate with: openssl rand -base64 32
# MUST be kept secret and consistent across deployments
SECRET_KEY=your-strong-secret-key-here-change-me

# JWT algorithm (do not change unless you know what you're doing)
ALGORITHM=HS256

# ============================================================================
# TOKEN EXPIRATION TIMES
# ============================================================================
# Access token expiration in minutes (how long JWT token is valid)
ACCESS_TOKEN_EXPIRE_MINUTES=15

# Refresh token expiration in days (how long user stays logged in)
REFRESH_TOKEN_EXPIRE_DAYS=30

# ============================================================================
# API CONFIGURATION
# ============================================================================
# FastAPI host binding (0.0.0.0 = all interfaces)
API_HOST=0.0.0.0

# FastAPI port inside Docker container
API_PORT=8000

# Public API base URL (used by frontend)
API_BASE_URL=https://zaply.in.net/api/v1

# ============================================================================
# CORS CONFIGURATION
# ============================================================================
# Comma-separated list of allowed origins for CORS
# Only these domains can make browser requests to the API
CORS_ORIGINS=https://zaply.in.net,http://zaply.in.net

# ============================================================================
# FILE UPLOAD CONFIGURATION
# ============================================================================
# Maximum file size in bytes (default: 40GB)
MAX_FILE_SIZE_BYTES=42949672960

# Chunk size for file uploads in bytes (default: 4MB)
CHUNK_SIZE=4194304

# Maximum parallel chunks during upload (default: 4)
MAX_PARALLEL_CHUNKS=4

# File upload expiration in hours (incomplete uploads deleted after this)
UPLOAD_EXPIRE_HOURS=24

# Completed file retention in hours (0 = keep forever)
FILE_RETENTION_HOURS=0

# ============================================================================
# RATE LIMITING
# ============================================================================
# Number of requests allowed per user within the window
RATE_LIMIT_PER_USER=100

# Time window for rate limiting in seconds
RATE_LIMIT_WINDOW_SECONDS=60

# ============================================================================
# LOGGING & DEBUG
# ============================================================================
# Debug mode (MUST be False in production)
DEBUG=False

# Log level (debug, info, warning, error, critical)
LOG_LEVEL=info

# ============================================================================
# DOMAIN CONFIGURATION
# ============================================================================
# Your domain name (used in emails, links, etc.)
DOMAIN=zaply.in.net

# Email settings (if implementing email notifications)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-specific-password

# ============================================================================
# DEPLOYMENT ENVIRONMENT
# ============================================================================
# Environment (development, staging, production)
ENVIRONMENT=production

# Timezone for the application
TZ=UTC
