# ===========================
# MONGODB CONFIGURATION
# ===========================
# For local development:
MONGODB_URI=mongodb://localhost:27017/hypersend

# For Docker with auth:
# MONGODB_URI=mongodb://hypersend:password@mongodb:27017/hypersend?authSource=admin

# For Docker Compose (no auth by default):
MONGO_USER=hypersend
MONGO_PASSWORD=changeme123
MONGO_PORT=27017

# ===========================
# SECURITY
# ===========================
# Generate with: openssl rand -hex 32
SECRET_KEY=your-very-secret-random-key-min-32-chars-generate-new-one
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=30

# ===========================
# FILE STORAGE
# ===========================
DATA_ROOT=./data
STORAGE_MODE=local
CHUNK_SIZE=4194304
MAX_FILE_SIZE_BYTES=42949672960
MAX_PARALLEL_CHUNKS=4
UPLOAD_EXPIRE_HOURS=24
FILE_RETENTION_HOURS=0

# ===========================
# API SERVER
# ===========================
API_HOST=0.0.0.0
API_PORT=8000
API_BASE_URL=http://localhost:8000
ENVIRONMENT=development
DEBUG=True

# ===========================
# RATE LIMITING
# ===========================
RATE_LIMIT_PER_USER=100
RATE_LIMIT_WINDOW_SECONDS=60

# ===========================
# DOCKER & DEPLOYMENT
# ===========================
DOCKERHUB_USERNAME=your-dockerhub-username
IMAGE_TAG=latest
FRONTEND_PORT=8550
