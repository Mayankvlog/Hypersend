# Local Development Environment Configuration for Hypersend
# Copy this file to .env and update values as needed

# ===== DOMAIN CONFIGURATION =====
DOMAIN_NAME=localhost
API_BASE_URL=http://localhost:8000/api/v1
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# ===== DATABASE CONFIGURATION =====
MONGO_USER=hypersend
MONGO_PASSWORD=CHANGE_THIS_SECURE_PASSWORD
MONGO_INITDB_DATABASE=hypersend

# ===== SECURITY CONFIGURATION =====
SECRET_KEY=CHANGE_THIS_SECRET_KEY_TO_SOMETHING_SECURE
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=28800
REFRESH_TOKEN_EXPIRE_DAYS=20
UPLOAD_TOKEN_EXPIRE_HOURS=480

# ===== FILE UPLOAD CONFIGURATION =====
MAX_FILE_SIZE_BYTES=42949672960
CHUNK_SIZE=33554432
MAX_PARALLEL_CHUNKS=4
FILE_RETENTION_HOURS=0

# ===== EMAIL CONFIGURATION =====
ENABLE_EMAIL=true
ENABLE_PASSWORD_RESET=true
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=noreply@localhost.com
SMTP_PASSWORD=CHANGE_THIS_APP_PASSWORD
SMTP_USE_TLS=true
EMAIL_FROM=noreply@localhost.com
SENDER_NAME=Hypersend Support

# ===== RATE LIMITING =====
RATE_LIMIT_PER_USER=100
RATE_LIMIT_WINDOW_SECONDS=60

# ===== DEBUG & DEVELOPMENT =====
DEBUG=false
USE_MOCK_DB=false
VALIDATE_CERTIFICATES=true

# ===== NGINX CONFIGURATION =====
NGINX_API_HOST=0.0.0.0
NGINX_API_KEY=hypersend_secure_api_key
NGINX_API_SECRET=hypersend_secure_api_secret
NGINX_PROXY_READ_TIMEOUT=3600
NGINX_PROXY_SEND_TIMEOUT=3600
NGINX_PROXY_CONNECT_TIMEOUT=300
NGINX_CLIENT_BODY_TIMEOUT=3600
NGINX_CLIENT_MAX_BODY_SIZE=45G
