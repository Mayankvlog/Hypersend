# =============================================================================
# PRODUCTION ENVIRONMENT CONFIGURATION FOR HYPERSEND
# =============================================================================
# 
# SECURITY NOTES:
# 1. Set strong, unique passwords for all services
# 2. Use a proper SECRET_KEY (generate with: openssl rand -hex 32)
# 3. Never commit this file to version control
# 4. Use Docker secrets or Kubernetes secrets in production
# 5. Rotate keys periodically
# =============================================================================

# =============================================================================
# CORE SECURITY
# =============================================================================
# Generate with: openssl rand -hex 32
SECRET_KEY=your_generated_secret_key_here_32_bytes_hex

# =============================================================================
# REDIS CONFIGURATION (CRITICAL FOR E2EE)
# =============================================================================
# Generate strong password with: openssl rand -base64 32
REDIS_PASSWORD=your_strong_redis_password_here_minimum_32_chars

# Redis connection (auto-configured from above)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_URL=redis://:${REDIS_PASSWORD}@redis:6379/0

# =============================================================================
# MONGODB ATLAS CONFIGURATION
# =============================================================================
MONGODB_URI=mongodb+srv://your_username:your_password@cluster0.xxxxx.mongodb.net/hypersend?retryWrites=true&w=majority
MONGO_USER=your_username
MONGO_PASSWORD=your_mongodb_password
MONGO_HOST=cluster0.xxxxx.mongodb.net
MONGODB_ATLAS_ENABLED=true

# =============================================================================
# AWS S3 CONFIGURATION
# =============================================================================
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
S3_BUCKET=hypersend-temp

# =============================================================================
# EMAIL CONFIGURATION (OPTIONAL)
# =============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
EMAIL_FROM=noreply@zaply.in.net
SENDER_NAME=Zaply Support

# =============================================================================
# TURN SERVER CONFIGURATION
# =============================================================================
TURN_USERNAME=turnuser
TURN_PASSWORD=your_turn_password_here

# =============================================================================
# E2EE CRYPTOGRAPHIC SECRETS (CRITICAL)
# =============================================================================
# Generate these with: openssl rand -base64 64
E2EE_MASTER_KEY=your_e2ee_master_key_minimum_64_chars_base64
E2EE_SIGNAL_IDENTITY_KEY=your_signal_identity_key_base64_encoded
E2EE_SIGNAL_SIGNED_PREKEY=your_signal_signed_prekey_base64_encoded
E2EE_HMAC_SECRET=your_hmac_secret_for_e2ee_signatures_64_chars
E2EE_KDF_SALT=your_kdf_salt_for_key_derivation_64_chars

# =============================================================================
# API CONFIGURATION
# =============================================================================
API_BASE_URL=https://zaply.in.net/api/v1
ALLOWED_ORIGINS=https://zaply.in.net,https://www.zaply.in.net
DOMAIN_NAME=zaply.in.net

# =============================================================================
# MONITORING (OPTIONAL)
# =============================================================================
GRAFANA_PASSWORD=your_grafana_admin_password

# =============================================================================
# NGINX API SECURITY
# =============================================================================
NGINX_API_KEY=your_nginx_api_key_here
NGINX_API_SECRET=your_nginx_api_secret_here
